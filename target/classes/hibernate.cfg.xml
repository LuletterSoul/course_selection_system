<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM
        "classpath://org/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/selection_course_system_db</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <property name="hibernate.c3p0.max_size">20</property>
    <property name="hibernate.c3p0.min_size">1</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
    <property name="current_session_context_class">thread</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.show_sql">true</property>
    <property name="org.hbm2ddl.auto">update</property>
      <mapping class="org.app.entity.Address"/>
    <mapping class="org.app.entity.Course"/>
    <mapping class="org.app.entity.CourseArrangementInfo"/>
    <mapping class="org.app.entity.CourseSelectionInfo"
    <mapping class="org.app.entity.Department"/>
    <mapping class="org.app.entity.Phone"/>
    <mapping class="org.app.entity.Profession"/>
    <mapping class="org.app.entity.Student"/>
    <mapping class="org.app.entity.Teacher"/>
      <mapping class="org.app.entity.AdministrationClass"/>
      <mapping class="org.app.entity.Schedule"/>

  </session-factory>
  
  
</hibernate-configuration>